<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.registro.RegistroController">
    <VBox alignment="CENTER" layoutX="450.0" layoutY="41.0" prefHeight="600.0" prefWidth="450.0" spacing="12" AnchorPane.leftAnchor="450.0" AnchorPane.topAnchor="41.0">

        <Label styleClass="title" text="REGISTRO" />

        <TextField fx:id="txtNombre" promptText="NOMBRE" />

        <HBox spacing="10">
            <TextField fx:id="txtApellido1" promptText="APELLIDO PATERNO" prefWidth="200.0" />
            <TextField fx:id="txtApellido2" promptText="APELLIDO MATERNO" prefWidth="200.0" />
        </HBox>

        <ComboBox fx:id="comboBox" promptText="GRADO ACADÉMICO" prefWidth="400">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Licenciatura" />
                    <String fx:value="Maestría" />
                    <String fx:value="Doctorado" />
                </FXCollections>
            </items>
        </ComboBox>

        <TextField fx:id="txtCorreo1" promptText="CORREO INSTITUCIONAL" />
        <TextField fx:id="txtCorreo2" promptText="CORREO PERSONAL" />
        <TextField fx:id="txtTelefono" promptText="TELÉFONO" />

        <HBox spacing="5">
            <PasswordField fx:id="txtPassword" promptText="CONTRASEÑA" prefWidth="250" />
            <TextField fx:id="txtPasswordVisible" promptText="CONTRASEÑA" prefWidth="250" visible="false" managed="false" />
            <Button fx:id="btnTogglePassword" text="👁" />
        </HBox>

        <Label fx:id="lblPasswordHint" style="-fx-text-fill: red; -fx-font-size: 11px;" wrapText="true" />

        <PasswordField fx:id="txtConfirmarPassword" promptText="CONFIRMAR CONTRASEÑA" />
        <Label fx:id="lblConfirmarPasswordHint" style="-fx-text-fill: red; -fx-font-size: 11px;" wrapText="true" />

        <Button fx:id="btn_registrar" text="REGISTRAR" styleClass="register-button" />
    </VBox>
</AnchorPane>
